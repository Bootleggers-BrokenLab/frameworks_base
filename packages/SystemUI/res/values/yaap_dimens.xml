<resources>

    <!-- StatusBar burn-in protection -->
    <dimen name="horizontal_max_shift">3.0dp</dimen>
    <dimen name="vertical_max_shift">2.0dp</dimen>

    <!-- Auth ripple animation duration
         AOSP default is 1533 -->
    <item name="auth_ripple_animation_duration" format="float" type="dimen">766.5</item>

    <!-- Network traffic monitor -->
    <dimen name="net_traffic_multi_text_size">8dp</dimen>
    <dimen name="net_traffic_txt_img_padding">4dp</dimen>

    <!-- QQS Brightness slider -->
    <dimen name="quick_qs_brightness_margin_top">24dp</dimen>

    <!-- Width of the battery icon in the status bar when set to circle style. -->
    <dimen name="status_bar_battery_icon_circle_width">14.5dp</dimen>

    <!-- Screen Record -->
    <dimen name="screenrecord_dot_size">48dp</dimen>

    <!-- Bluetooth dialog -->
    <dimen name="bluetooth_dialog_active_device_bottom_margin">4dp</dimen>

    <!-- Height of the landscape battery icon in the status bar. -->
    <dimen name="status_bar_battery_icon_height_landscape">19dp</dimen>

    <!-- Width of the landscape battery icon in the status bar. -->
    <dimen name="status_bar_battery_icon_width_landscape">28dp</dimen>

</resources>
